<!doctype html>
<html lang="en">
  <%- include('./partials/head', { title : "Detalle del producto" }) %>

  <body>
    <div class="container">
      <!-- Contenedor ppal -->

      <%- include('./partials/header') %>
      <main class="row">
        <div class="col-12 col-md-8 mx-auto">
          <div class="card">
            <div class="row g-0">
              <div class="col-md-4">
                <img
                  src="<%= /(?:https?):\/\/(\w+:?\w*)?(\S+)(:\d+)?(\/|\/([\w#!:.?+=&%!\-\/]))?/.test(image) ? image : `/images/${image}`%>"
                  class="img-fluid rounded-start"
                  alt="..."
                />
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= title %></h5>
                  <hr>
                  <p>
                    <%= description %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
