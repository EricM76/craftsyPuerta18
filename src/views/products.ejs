<!doctype html>
<html lang="en">
  <%- include('./partials/head',{ title : "Productos" }) %>

  <body>
    <div class="container">
      <%- include('./partials/header') %>
      <main class="row">
        <div class="card mb-5">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <div>
                   <h1>
                <% if (locals.keywords) { %> 
                  Resultado de la búsqueda: <%= keywords %>
                <% } else { %>
                  Todos los productos 
                <% } %>
              </h1>
              <% if (!products.length) { %>
                <div class="alert alert-info">
                  No hay resultado para la búsqueda
  
              </div>
                <% } %>
              </div>
           
              <form
                method="GET"
                class="d-flex align-items-center"
                role="search"
                action="/products/search"
              >
                <input
                  name="keywords"
                  class="form-control me-2"
                  type="search"
                  placeholder="Search"
                  aria-label="Search"
                />
                <button class="btn btn-outline-success" type="submit">
                  <i class="fa-solid fa-magnifying-glass"></i>
                </button>
              </form>
            </div>

            <hr />
          </div>
        </div>
        <% if (products.length) { %>
          <% products.forEach(({id, title, image}) => { %>
          <div class="col-12 col-md-6 col-lg-4">
            <a href="/products/<%= id %>" style="text-decoration: none">
              <div class="card mb-3" >
                <div class="row g-0">
                  <div class="col-md-5">
                    <img
                    src="<%= /(?:https?):\/\/(\w+:?\w*)?(\S+)(:\d+)?(\/|\/([\w#!:.?+=&%!\-\/]))?/.test(image) ? image : `/images/${image}`%>"
                      class="rounded-start img-fluid"
                      alt="..." 
                    />
                  </div>
                  <div class="col-md-7">
                    <div class="card-body">
                      <h5 class="card-title"><%= title %></h5>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <% }) %>

        <% } %>
      </main>
    </div>
  </body>
</html>
